<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent">
    <com.google.android.material.card.MaterialCardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:id="@+id/mcvInfo"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            android:layout_margin="15dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            android:layout_height="230dp"
            android:layout_alignParentTop="true"
            android:background="?attr/selectableItemBackgroundBorderless">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_margin="8dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/tvPropertyName"
                          android:text="Maridadi Apartments"
                          android:textStyle="bold"
                          android:textAlignment="center"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:textSize="9pt"
                          android:textColor="#555454"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/tvPropertyLocation"
                          android:text="Kinoo, Kiambu"
                          android:textStyle="normal"
                          android:textAlignment="center"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:textSize="7pt"
                          android:textColor="#555454"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/tvPropertyAddress"
                          android:text="+254706 828 557, care@maridadiapartments.com"
                          android:textStyle="normal"
                          android:textAlignment="center"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:textSize="6pt"
                          android:textColor="#555454"/>
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/colorPrimary"></View>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_margin="8dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="House No"
                          android:textStyle="normal"
                          android:textAlignment="center"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:textSize="7pt"
                          android:textColor="#555454"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/tvHouse"
                          android:text="E4"
                          android:textStyle="bold"
                          android:textAlignment="center"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:textSize="15pt"
                          android:textColor="#555454"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/tvHouseTypeName"
                          android:text="2 Bedroom, master ensuite"
                          android:textStyle="normal"
                          android:textAlignment="center"
                          android:layout_gravity="center"
                          android:gravity="center"
                          android:textSize="6pt"
                          android:textColor="#555454"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginTop="130dp"
                  android:background="@drawable/home2_background"
                  android:layout_marginRight="0dp"
                  android:layout_marginLeft="0dp"
                  android:paddingLeft="5dp"
                  android:paddingRight="5dp"
                  android:orientation="vertical"
                  android:layout_height="match_parent">
        <View android:layout_width="wrap_content" android:layout_height="100dp"/>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_margin="15dp"
                      android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHomeOptionsPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:spanCount="1">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>