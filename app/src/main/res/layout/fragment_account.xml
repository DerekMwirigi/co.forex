<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:padding="5dp"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:padding="15dp"
                      android:layout_alignParentTop="true"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Rent Due"
                      android:textStyle="bold"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:textSize="10pt"
                      android:textColor="#B67800"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Amount : KES 28,680 Date : 12-09-2019"
                      android:textStyle="normal"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:textSize="6pt"
                      android:textColor="#555454"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_alignParentTop="true"
                      android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="horizontal"
                              android:weightSum="2"
                              android:layout_height="wrap_content">
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="Analysis"
                              android:layout_weight="1"
                              android:textStyle="normal"
                              android:layout_gravity="left"
                              android:gravity="left"
                              android:textSize="7pt"
                              android:textColor="#555454"/>
                    <ImageView android:layout_width="20dp"
                               android:layout_gravity="right"
                               android:layout_weight="1"
                               app:srcCompat="@drawable/ic_more_vert_24dp"
                               android:layout_height="20dp"/>
                </LinearLayout>
                <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/colorPrimary"></View>
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:background="@drawable/home2_background"
                              android:layout_height="200dp">

                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvAccountOptionsPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:spanCount="1">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>