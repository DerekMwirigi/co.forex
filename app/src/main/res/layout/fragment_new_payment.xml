<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:padding="10dp"
              android:layout_marginBottom="50dp"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:weightSum="3"
                      android:id="@+id/llTop"
                      android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_gravity="left"
                          android:layout_weight="1"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/tvTitle"
                          android:text="New payment"
                          android:textSize="8pt"
                          android:textColor="#555454"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/tvSubTitle"
                          android:text="Payment details."
                          android:textSize="5.5pt"
                          android:textColor="#666666"/>
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btMakePayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    app:cornerRadius="@dimen/itemRounds"
                    android:textColor="@color/colorWhite"
                    app:rippleColor="@color/colorPrimary"
                    android:textStyle="normal"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:textAllCaps="true"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Dialog.Flush"
                    android:text="Pay"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_below="@+id/llTop"
                      android:layout_marginTop="5dp"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
            <ScrollView android:layout_width="match_parent"
                        android:layout_height="match_parent">
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:layout_height="match_parent">
                    <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            app:boxCornerRadiusTopStart="@dimen/itemRounds"
                            app:boxCornerRadiusTopEnd="@dimen/itemRounds"
                            app:boxCornerRadiusBottomStart="@dimen/itemRounds"
                            app:boxCornerRadiusBottomEnd="@dimen/itemRounds"
                            app:boxStrokeWidth="1dp"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="@color/colorPrimary">
                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtPaymentFor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:helperText="Payment for"
                                app:helperTextEnabled="true"
                                android:focusable="false"
                                android:hint="Payment for"
                                android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            app:boxCornerRadiusTopStart="@dimen/itemRounds"
                            app:boxCornerRadiusTopEnd="@dimen/itemRounds"
                            app:boxCornerRadiusBottomStart="@dimen/itemRounds"
                            app:boxCornerRadiusBottomEnd="@dimen/itemRounds"
                            app:boxStrokeWidth="1dp"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="@color/colorPrimary">
                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtBillingAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:helperText="Billing Address"
                                app:helperTextEnabled="true"
                                android:focusable="false"
                                android:hint="Billing Address"
                                android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                app:boxCornerRadiusTopStart="@dimen/itemRounds"
                                app:boxCornerRadiusTopEnd="@dimen/itemRounds"
                                app:boxCornerRadiusBottomStart="@dimen/itemRounds"
                                app:boxCornerRadiusBottomEnd="@dimen/itemRounds"
                                app:boxStrokeWidth="1dp"
                                app:boxBackgroundMode="outline"
                                app:boxStrokeColor="@color/colorPrimary">
                            <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtAmount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:helperText="Amount (KES)"
                                    app:helperTextEnabled="true"
                                    android:hint="Amount (KES)"
                                    android:enabled="false"
                                    android:inputType="number"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            app:boxCornerRadiusTopStart="@dimen/itemRounds"
                            app:boxCornerRadiusTopEnd="@dimen/itemRounds"
                            app:boxCornerRadiusBottomStart="@dimen/itemRounds"
                            app:boxCornerRadiusBottomEnd="@dimen/itemRounds"
                            app:boxStrokeWidth="1dp"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="@color/colorPrimary">
                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:helperText="Description"
                                android:maxLines="4"
                                android:gravity="start"
                                android:lines="3"
                                android:enabled="false"
                                app:helperTextEnabled="true"
                                android:hint="Description"
                                android:inputType="textMultiLine"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_gravity="bottom|end"
                android:visibility="gone"
                android:id="@+id/fbMakePayment"
                android:layout_alignParentBottom="true"
                app:srcCompat="@drawable/ic_cloud_done_black_24dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>